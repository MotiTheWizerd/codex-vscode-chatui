{
  "includePatterns": [
    "*.ts",
    "*.js",
    "*.tsx",
    "*.jsx"
  ],
  "excludePatterns": [
    "node_modules",
    "dist",
    "*.test.*",
    "*.spec.*"
  ],
  "thresholds": {
    "lineCount": 250,
    "functionLength": 50,
    "nestingDepth": 5
  },
  "output": {
    "format": "markdown",
    "file": "code-analysis-report.md"
  }
}