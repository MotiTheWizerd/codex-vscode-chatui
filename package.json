{
  "name": "codex-vs-ext",
  "displayName": "Codex Chat",
  "description": "AI chat extension for VS Code powered by Codex",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/ext/extension.js",
  "type": "module",
  "publisher": "codex",
  "activationEvents": [
    "onStartupFinished",
    "onViewContainer:codexChatContainer"
  ],
  "contributes": {
    "commands": [
      {
        "command": "codex.openChatPanel",
        "title": "Codex: Open Chat"
      },
      {
        "command": "codex.showMenu",
        "title": "Codex: Menu",
        "category": "Codex"
      },
      {
        "command": "codex.showLogs",
        "title": "Codex: Show Logs",
        "category": "Codex"
      },
      {
        "command": "codex.toggleSidebar",
        "title": "Codex: Toggle Sidebar",
        "category": "Codex"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codexChatContainer",
          "title": "Codex",
          "icon": "media/codex-icon.svg"
        }
      ]
    },
    "views": {
      "codexChatContainer": [
        {
          "id": "codex.chatView",
          "name": "Codex Chat",
          "icon": "media/codex-icon.svg"
        }
      ]
    }
  },
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "tsc && tsc-alias && node ./src/scripts/fix-import-extensions.cjs",
    "watch": "concurrently --raw \"tsc -w\" \"tsc-alias -w\" \"chokidar \\\"dist/**/*.js\\\" -c \\\"node src/scripts/fix-import-extensions.cjs\\\"\"",
    "test": "jest",
    "backup": "node src/scripts/package-project.js",
    "lint": "eslint 'src/**/*.{ts,js}'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/vscode": "^1.103.0",
    "archiver": "^7.0.1",
    "concurrently": "^9.2.1",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.1",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2",
    "chokidar-cli": "^3.0.0"
  }
}
