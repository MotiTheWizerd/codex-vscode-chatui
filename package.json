{
  "name": "codex-vs-ext",
  "displayName": "CODΞX-Q",
  "description": "AI chat extension for VS Code powered by Codex",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/ext/extension.js",
  "type": "module",
  "publisher": "codexq",
  "activationEvents": [
    "onStartupFinished",
    "onCommand:codexq.openChatPanel",
    "onView:codexq.chatView",
    "onCommand:codexq.chat.focus"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codexq",
          "title": "Codex Q",
          "icon": "media/codexq-activitybar.svg"
        }
      ]
    },
    "views": {
      "codexq": [
        {
          "type": "webview",
          "id": "codexq.chatView",
          "name": "Chat",
          "contextualTitle": "Codex Q Chat",
          "visibility": "visible"
        }
      ]
    },
    "commands": [
      {
        "command": "codexq.openChatPanel",
        "title": "CODΞX-Q"
      },
      {
        "command": "codexq.chat.focus",
        "title": "CODΞX-Q: Focus Chat"
      },
      {
        "command": "codexq.showMenu",
        "title": "CCODΞX-Q: Menu",
        "category": "Codex Q"
      },
      {
        "command": "codexq.showLogs",
        "title": "CODΞX-Q: Show Logs",
        "category": "Codex Q"
      }
    ]
  },
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "tsc && tsc-alias && node ./src/scripts/fix-import-extensions.cjs",
    "watch": "concurrently --raw \"tsc -w\" \"tsc-alias -w\" \"chokidar \\\"dist/**/*.js\\\" -c \\\"node src/scripts/fix-import-extensions.cjs\\\"\"",
    "test": "jest",
    "backup": "node src/scripts/package-project.js",
    "lint": "eslint 'src/**/*.{ts,js}'",
    "analyze": "node dist/modules/QwenCoreAnalysis/cli.js",
    "generate-docs": "node scripts/generate-codebase-json.cjs"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/vscode": "^1.103.0",
    "archiver": "^7.0.1",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "glob": "^11.0.3",
    "jest": "^30.1.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "ts-jest": "^29.4.1",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2"
  }
}
